{
  "env": {
    "browser": true,
    "node": true,
    "es2021": true,
    "jest": true
  },
  "extends": ["airbnb-base", "eslint:recommended", "prettier"],
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module",
    "requireConfigFile": false
  },
  "rules": {
    "indent": "off",
    "no-underscore-dangle": "off"
  },
  "ignorePatterns": ["dist/*", "docs/*"]
}
